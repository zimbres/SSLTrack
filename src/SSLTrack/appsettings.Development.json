{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Polly": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Data": "Data Source=./data/dev.db"
  },
  "Configurations": {
    "DaysToExpiration": 30,
    "AlertsEnabled": true,
    "UpdateCron": "*/1 * * * *",
    "AlertCron": "*/1 * * * *",
    "ClearLogsCron": "*/5 * * * *",
    "ApiBaseAddress": "http://localhost:5096",
    "LogsEndpoint": "/api/logs",
    "ClearLogsEndpoint": "/api/logs/clear",
    "AgentsStatusEndpoint": "/api/ping"
  },
  "MailProperties": {
    "Name": "Domain Monitor",
    "MailFrom": "domain@domain.com",
    "MailTo": "alerts@domain.com",
    "Bcc": "",
    "Subject": "",
    "Body": "",
    "IsBodyHtml": true,
    "Username": "",
    "Password": "",
    "SmtpHost": "192.168.100.130",
    "Port": 25,
    "EnableSsl": false
  }
}
